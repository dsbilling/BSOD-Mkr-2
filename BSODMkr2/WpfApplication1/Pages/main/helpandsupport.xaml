<Page x:Class="support"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mui="http://firstfloorsoftware.com/ModernUI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="support">
    <Grid>
        <Rectangle Grid.RowSpan="2" />

        <!-- content root for additional spacing -->
        <Grid Margin="{StaticResource ContentMargin}">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Rectangle />
            <ScrollViewer>
                <StackPanel MinWidth="200">
                    <TextBlock Text="Help" Style="{StaticResource Heading2}" />
                    <mui:BBCodeBlock BBCode="If you are strugeling to use BSOD Mkr you can check out our [url=http://docs.rtrdt.ch/display/BM/BSOD+Mkr]documentation[/url] and see if you find a solution to your problem. You could also check our [url=https://my.rtrdt.ch/knowledgebase.php]knowledgebase[/url] and see if there is anything there too. And if these can't help you; you should send us a support ticket." />
                    <mui:BBCodeBlock BBCode="" />
                    <TextBlock Text="Support" Style="{StaticResource Heading2}" />
                    <mui:BBCodeBlock BBCode="You can easily get support from us via email or web for [b][u]free![/u][/b] &#13;&#10;&#13;&#10;Head over to [url=https://my.rtrdt.ch/submitticket.php]my.rtrdt.ch[/url] to submit a ticket. Or send us an email to [url=mailto:support@retardedtech.no]support@retardedtech.no[/url]" />
                </StackPanel>
            </ScrollViewer>

            <!-- optional header -->
            <Grid Margin="{StaticResource HeaderMargin}" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Rectangle />
                <!-- <TextBlock Text="header" /> -->
            </Grid>

            <!-- optional status -->
            <Grid Grid.Row="1" Margin="{StaticResource StatusMargin}" >
                <Rectangle />
                <!--<TextBlock Text="status" Name="status" />-->
                <TextBlock Text="© 2015, Retarded Tech" Foreground="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" TextAlignment="Right" />
            </Grid>
        </Grid>
    </Grid>
</Page>
